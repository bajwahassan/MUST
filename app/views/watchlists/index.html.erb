<style media="screen">
  body {background-image:url('/images/bg2.jpg')}
</style>

<h2> welcome <%=@user.name  %> !</h2>
<%= button_to "create new watchlist", new_user_watchlist_path, :method => "get", class: "btn btn-outline-info"%>
<div style="position: absolute; right: 4px; top: 4px; text-align: right">
    <%= button_to "Log out", logout_path, :method => "get", class: "btn btn-outline-info"%>
</div>

<p><% @watchlists.each do |w| %></p>

  <li><%= link_to w.name, user_watchlist_path(@user, w) %> - <%= w.description %></li>
<%end %>
