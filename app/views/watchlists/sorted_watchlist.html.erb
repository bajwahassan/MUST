<style>

    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    body {
      background-color:#e6e6e6
    }
</style>

<div style="position: absolute; right: 4px; top: 4px; text-align: right">
    <%= button_to "Log out", logout_path, :method => "get" %>
</div>

  <h2><%= @movies.first.watchlist.name %></h2>

  <div >
    <%= button_to "Back to lists", user_watchlists_path(@movies.first.watchlist.user), :method => "get"%>
  </div><br>


<table>

  <tr>
    <th>Title</th>
    <th>Genre</th>
    <th>description</th>
    <th>Year</th>
  </tr>

  <% @movies.each.with_index do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.genre %></td>
      <td><%= movie.description %></td>
      <td><%= movie.year %></td>
    </tr>
  <% end %>
</table>
